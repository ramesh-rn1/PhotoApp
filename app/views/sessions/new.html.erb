<div class="login">
	<div class="container">
		<div class="form">

      <h1>Log in</h1>
      <%= form_for(:session, url: login_path) do |f| %>
      <%= f.email_field :email, :placeholder => "Email", :required => true %>
      <%= f.password_field :password, :placeholder => "Password", :required => true %>
      <%= f.submit "Log in", class: "btn-submit" %>
      <% end %>
		
    </div>
	</div>
</div>